# SQLFluff configuration for SQLite
# Dialect: sqlite

[sqlfluff]
dialect = sqlite
templater = raw
sql_file_exts = .sql,.sqlite
max_line_length = 120
indent_unit = space
indented_joins = False

[sqlfluff:rules]
tab_space_size = 2
max_line_length = 120
indent_unit = space
comma_style = trailing
capitalisation_policy = upper

# SQLite-specific adjustments
[sqlfluff:rules:L003]
hanging_indents = True

[sqlfluff:rules:L014]
extended_capitalisation_policy = lower
